<link rel="stylesheet" href="modals/packManager.css"/>

<div class="modal overlay centered" id="modal-packManager" style="display: none;">
    <div class="flex flex-gap-8 flex-align-center title-wrapper">
        <img class="icon"/>
        <div class="flex flex-col flex-grow">
            <h2 class="title"></h2>
            <span class="description"></span>
        </div>
        <button class="square small export" title="{{packManager.buttons.export}}"><span
                    class="material-symbols-outlined">upgrade</span></button>
        <button class="square small icon" title="{{packManager.buttons.icon}}"><span class="material-symbols-outlined">add_photo_alternate</span>
        </button>
        <button class="square small folder" title="{{packManager.buttons.folder}}"><span
                    class="material-symbols-outlined">folder_open</span></button>
        <button class="square small delete" title="{{packManager.buttons.delete}}"><span
                    class="material-symbols-outlined">delete</span></button>
        <button class="square small play" title="{{packManager.buttons.play}}"><span class="material-symbols-outlined">play_arrow</span>
        </button>
        <button class="square transparent small" onclick="FrogModals.hideModal('packManager')">
            <span class="material-symbols-outlined">close</span>
        </button>
    </div>

    <%- include('../sections/packManager/tabs.ejs'); %>
    <%- include('../sections/packManager/layoutTabs.ejs'); %>
</div>