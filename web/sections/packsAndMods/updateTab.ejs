<link rel="stylesheet" href="sections/packsAndMods/updateTab.css"/>

<div class="updateTab">
    <div class="selectMode">
        <div class="icon">
            <span class="material-symbols-outlined">update</span>
        </div>
        <h1>{{packs.updatePackM.title}}</h1>
        <h3>{{packs.updatePackM.disclaimer}}</h3>
        <select class="custom-select" id="mods-update-pack-select"></select>
        <button class="primary pill" onclick="FrogModsUpdater.checkUpdatesBySelect()">{{packs.updatePackM.check}}
        </button>
    </div>

    <div class="updateMode" style="display: none">
        <div class="spinner large"></div>
        <h2 class="text">{{packs.updatePackM.checking}}</h2>
        <h3 class="mod"></h3>
    </div>

    <div class="foundUpdateMode" style="display: none">
        <h2>{{packs.updatePackM.found}} <span class="updatesFoundCount"></span></h2>

        <div class="updatesListWrapper">
            <div class="updatesList"></div>
        </div>

        <button class="primary pill" onclick="FrogModsUpdater.updateAllFromList()">{{packs.updatePackM.update}}</button>
    </div>
</div>